# Environment Configuration Example
# Copy this file to .env and configure

# Server Configuration
MCP_PORT=8300
ENV=default  # default, dev, or prod

# Authentication
AUTH_ENABLED=false
AUTH_PASSWORD=your-secure-password-here

# Permission Level: "read-only" or "full-control"
# read-only: Can view status, logs, stats (no start/stop/restart)
# full-control: Can perform all operations
AUTH_PERMISSION_LEVEL=full-control

# Auto-discovery
AUTO_DISCOVER=true
